<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/Answer"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#64B5F6"
        android:textSize="30dp" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/four"
        android:layout_alignParentStart="true"
        android:text="1" />

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/one"
        android:layout_centerHorizontal="true"
        android:text="2" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/two"
        android:text="3" />

    <Button
        android:id="@+id/mult"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_above="@+id/div"
        android:layout_alignParentStart="true"
        android:text="*" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seven"
        android:layout_alignParentStart="true"
        android:text="4" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/four"
        android:layout_centerHorizontal="true"
        android:text="5" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/five"
        android:text="6" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="7" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seven"
        android:layout_centerHorizontal="true"
        android:text="8" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seven"
        android:text="9" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clear"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <Button
        android:id="@+id/plus"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_above="@+id/minus"
        android:layout_alignParentStart="true"
        android:text="+" />

    <Button
        android:id="@+id/minus"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_above="@+id/mult"
        android:layout_alignParentStart="true"
        android:text="-" />

    <Button
        android:id="@+id/eq"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="=" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_above="@+id/plus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:text="A/C" />

    <Button
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_above="@+id/eq"
        android:layout_alignParentStart="true"
        android:text="/" />

</RelativeLayout>